FormatVersion: 2.1.0
Version: 1.0.0
Name: Deploy iotagent

Parameters:
  port: $port

Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Puppet
    Version: 1.0.0
    EntryPoint: iotagent::install
    Files:
        - iotagent : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/GESoftware/iotagent
        - monit : https://github.com/echoes-tech/puppet-monit

    Options:
      captureStdout: true
      captureStderr: true
