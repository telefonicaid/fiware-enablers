FormatVersion: 2.2.0
Version: 1.0.0
Name: Deploy haproxy

Parameters:
  port: $port


Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Chef
    Version: 1.0.0
    EntryPoint: haproxy::default
    Files:
        - haproxy : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/BaseSoftware/haproxy

    Options:
      captureStdout: true
      captureStderr: true
      
