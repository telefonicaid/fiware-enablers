FormatVersion: 2.1.0
Version: 1.0.0
Name: Deploy jboss7

Parameters:
  port: $port


Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Chef
    Version: 1.0.0
    EntryPoint: jboss7::default
    Files:
        - jboss7 : https://github.com/andy-dufour/chef-jboss7.git
        - apt : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/BaseRecipes/apt-spagobi/
        - java : https://github.com/agileorbit-cookbooks/java.git
        - ark : https://github.com/burtlo/ark.git
        - build-essential : https://github.com/chef-cookbooks/build-essential.git
        - 7-zip : https://github.com/sneal/7-zip.git
        - windows : https://github.com/chef-cookbooks/windows.git
        - chef_handler : https://github.com/chef-cookbooks/chef_handler.git
        - seven_zip : https://github.com/sneal/7-zip.git

    Options:
      captureStdout: true
      captureStderr: true
