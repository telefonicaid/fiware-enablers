FormatVersion: 2.2.0
Version: 1.0.0
Name: Deploy ckan

Parameters:
  port: $port


Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Chef
    Version: 1.0.0
    EntryPoint: ckan::2.3_install
    Files:
        - ckan : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/GESoftware/ckan

    Options:
      captureStdout: true
      captureStderr: true
      useBerkshelf: true
