FormatVersion: 2.1.0
Version: 1.0.0
Name: Deploy iotagent


Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Puppet
    Version: 1.0.0
    EntryPoint: iotagent::install
    Files:
        - iotagent : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/GESoftware/iotagent
        - monit : https://github.com/jbussdieker/puppet-monit.git
        - stdlib : https://github.com/puppetlabs/puppetlabs-stdlib.git
        - mongodb : https://github.com/puppetlabs/puppetlabs-mongodb.git
        - concat: https://github.com/puppetlabs/puppetlabs-concat.git

    Options:
      captureStdout: true
      captureStderr: true
