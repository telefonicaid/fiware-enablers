FormatVersion: 2.1.0
Version: 1.0.0
Name: Deploy cepheus

Parameters:
  port: $port


Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Chef
    Version: 1.0.0
    EntryPoint: cepheus::0.1.3_install
    Files:
        - cepheus : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/GESoftware/cepheus
        - apt : https://github.com/chef-cookbooks/apt.git
        - compat_resource : https://github.com/chef-cookbooks/compat_resource.git

    Options:
      captureStdout: true
      captureStderr: true
