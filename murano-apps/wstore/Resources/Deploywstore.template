FormatVersion: 2.1.0
Version: 1.0.0
Name: Deploy wstore

Parameters:
  port: $port

Body: |
  return executeRecipe(args).stdout

Scripts:
  executeRecipe:
    Type: Chef
    Version: 1.0.0
    EntryPoint: wstore::0.3.0_install
    Files:
        - wstore : https://forge.fiware.org/scmrepos/svn/testbed/trunk/cookbooks/GESoftware/wstore
        - build-essential : https://github.com/chef-cookbooks/build-essential.git
        - python : https://github.com/poise/python.git
        - yum-epel : https://github.com/chef-cookbooks/yum-epel.git
        - mongodb : https://github.com/edelight/chef-mongodb.git
        - apt : https://github.com/puppetlabs/puppetlabs-apt.git
        - apache2 : https://github.com/chef-cookbooks/httpd.git
        - compat_resource : https://github.com/chef-cookbooks/compat_resource.git
        - yum : https://github.com/chef-cookbooks/yum.git

    Options:
      captureStdout: true
      captureStderr: true
